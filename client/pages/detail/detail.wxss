
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.top {
    width:100%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1000;
    margin-bottom: 30rpx;
}
.top_bg {
    position: absolute;
    width:100%;
    height: 200rpx;
    filter: blur(120rpx);
    -webkit-filter: blur(120rpx);
    z-index: 999;
}
.avatar {
    /* flex:1; */
    margin: 28rpx;
    z-index: 1001;
    width: 100rpx;
    height:100rpx;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -ms-border-radius: 50%;
    -o-border-radius: 50%;
}
.nickname {
    /* flex:1; */
    z-index: 1001;
    font-size: 28rpx;
    color:#333;
}
.item_wp {
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: #eee 1rpx solid;
    justify-content: space-between;
    padding-right: 20rpx;
}
.icon {
    width: 80rpx;
    height:80rpx;
    border-radius: 20%;
    -webkit-border-radius: 20%;
    -moz-border-radius: 20%;
    -ms-border-radius: 20%;
    -o-border-radius: 20%;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.item_txt {
    flex:1;
    font-size: 28rpx;
    color:#333;
}
.arrow {
    width: 30rpx;
    height:40rpx;
}
